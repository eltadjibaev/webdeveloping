<% include partials/header %>

<div class='container'>
    <header class='jumbotron'>
        <div class=container>
            <h2>Welcome To YelpCamp!</h2>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p><a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add new Campground</a></p>
        </div>
    </header>
    
    <div class="row">
        <div class='col-lg-12'>
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>
    
    <div class='row text-center' style="display:flex; flex-wrap: wrap;">
        <%campgrounds.forEach(function(camp){%>
        <div class='col-md-3 col-sm-6'>
            <div class='thumbnail'>
                <img src='<%=camp.image%>'>
                <div class='caption'><h4><%=camp.name%></h4></div>
            </div>
            
        </div>
        <%});%>
    </div>
    
    <a href='/'>Go Home Page!!</a>

</div>

<% include partials/footer %>